@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>@Html.Sitecore().Field("title", new { DisableWebEdit = true })</title>
    <link href="~/Css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Css/profile.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript">
    $(document).ready(function () {
        $("#ddlContactProfile").change(function () {
            var categoryId = $("#ddlContactProfile").val();
            @*$("#dvContactFormSection").load('@(Url.Action("GetContactProfileFields","SCContactProfiles",null, Request.Url.Scheme))?categoryId=' + categoryId);*@

            var requestData = {
                categoryId: $.trim(categoryId)
            };


            $.ajax({
                url: 'api/Sitecore/SCContactProfiles/GetContactProfileFields',
                type: 'POST',
                data: JSON.stringify(requestData),
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                error: function (xhr) {
                    alert('Error: ' + xhr.statusText);
                },
                success: function (result) {
                    CheckIfInvoiceFound(result);
                },
                async: true,
                processData: false
            });
        });
    });
        function myFunction() {
            var x = document.getElementById("myTopnav");
            if (x.className === "topnav") {
                x.className += " responsive";
            } else {
                x.className = "topnav";
            }
        }
    </script>
    @*@Html.Sitecore().VisitorIdentification()*@
</head>
<body>
    <div class="container">
        @Html.Sitecore().Placeholder("ArticlePage.Grid")
    </div>
</body>
</html>
