@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using EBPOC.Web.Models

@model SCContactVM
<div class="col-md-9" id="firstContent">
    <div id="image">
        <img src="images/visu-tools.jpg" style="visibility: hidden;" />
    </div>
    <div class="section">
        <p>Vous avez une question concernant nos produits ou souhaitez obtenir une offre ? Contactez-nous sans plus attendre via le formulaire ci-dessous. Dès réception de la demande, nous prendrons contact avec la personne renseignée. </p>
        <p>Si vous êtes déjà client, veuillez prendre contact avec votre conseiller habituel. &nbsp;</p>
    </div>
    <!--form starts-->
    <div class="form">
        <h3>Sélectionnez votre profil</h3>
        <div class="form_field">
            @Html.DropDownListFor(
                x => x.SelectedProfileId,
                new SelectList(Model.Items, "ContactProfileValue", "ContactProfileName"), new { id = "ddlContactProfile" }
            )
        </div>
        <div class="form_section">
            <h3>Informations de la société</h3>
            <div class="form_field">
                <label for="SocNom">Nom de la société</label>
                <input name="ctl00$WPMMasterPage$g_6ea89758_fe38_4dad_b20a_3c5e5a7ce7cd$ctl00$SocNom" type="text" id="ctl00_WPMMasterPage_g_6ea89758_fe38_4dad_b20a_3c5e5a7ce7cd_ctl00_SocNom" class="input_small">
            </div>
            <div class="form_field">
                <label for="SocNbPers">Nombre de personnes occupées dans la société</label>
                <input name="ctl00$WPMMasterPage$g_6ea89758_fe38_4dad_b20a_3c5e5a7ce7cd$ctl00$SocNbPers" type="text" id="ctl00_WPMMasterPage_g_6ea89758_fe38_4dad_b20a_3c5e5a7ce7cd_ctl00_SocNbPers" class="input_small">
            </div>
            <div class="form_field">
                <label for="SocAdresse">Adresse de la société</label>
                <input name="ctl00$WPMMasterPage$g_6ea89758_fe38_4dad_b20a_3c5e5a7ce7cd$ctl00$SocAdresse" type="text" id="ctl00_WPMMasterPage_g_6ea89758_fe38_4dad_b20a_3c5e5a7ce7cd_ctl00_SocAdresse" class="input_small">
            </div>
            <h3>Informations de la personne à contacter</h3>
            <div class="form_field">
                <label for="PersNom">Nom</label>
                <input name="ctl00$WPMMasterPage$g_6ea89758_fe38_4dad_b20a_3c5e5a7ce7cd$ctl00$PersNom" type="text" id="ctl00_WPMMasterPage_g_6ea89758_fe38_4dad_b20a_3c5e5a7ce7cd_ctl00_PersNom" class="input_small">
            </div>
            <div class="form_field">
                <label for="Prén">Prénom</label>
                <input name="ctl00$WPMMasterPage$g_6ea89758_fe38_4dad_b20a_3c5e5a7ce7cd$ctl00$Prén" type="text" id="ctl00_WPMMasterPage_g_6ea89758_fe38_4dad_b20a_3c5e5a7ce7cd_ctl00_Prén" class="input_small">
            </div>
            <div class="form_field">
                <label for="Fct">Fonction</label>
                <input name="ctl00$WPMMasterPage$g_6ea89758_fe38_4dad_b20a_3c5e5a7ce7cd$ctl00$Fct" type="text" id="ctl00_WPMMasterPage_g_6ea89758_fe38_4dad_b20a_3c5e5a7ce7cd_ctl00_Fct" class="input_small">
            </div>
            <div class="form_field">
                <label for="Numtél">Numéro de téléphone</label>
                <input name="ctl00$WPMMasterPage$g_6ea89758_fe38_4dad_b20a_3c5e5a7ce7cd$ctl00$Numtél" type="text" id="ctl00_WPMMasterPage_g_6ea89758_fe38_4dad_b20a_3c5e5a7ce7cd_ctl00_Numtél" class="input_small">
            </div>
            <div class="form_field">
                <label for="email">Adresse e-mail</label>
                <input name="ctl00$WPMMasterPage$g_6ea89758_fe38_4dad_b20a_3c5e5a7ce7cd$ctl00$email" type="text" id="ctl00_WPMMasterPage_g_6ea89758_fe38_4dad_b20a_3c5e5a7ce7cd_ctl00_email" class="input_small">
            </div>
            <h3>Votre demande</h3>
            <div class="form_field">
                <label for="Dem">Inscrivez ici votre demande/question</label>
                <textarea name="ctl00$WPMMasterPage$g_6ea89758_fe38_4dad_b20a_3c5e5a7ce7cd$ctl00$Dem" id="ctl00_WPMMasterPage_g_6ea89758_fe38_4dad_b20a_3c5e5a7ce7cd_ctl00_Dem" class="input_long" rows="5"></textarea>
            </div>
        </div>
        <div class="form_submit">
            <button onclick="if (typeof(Page_ClientValidate) == 'function') Page_ClientValidate(''); __doPostBack('ctl00$WPMMasterPage$g_6ea89758_fe38_4dad_b20a_3c5e5a7ce7cd$ctl00$ctl27','')" class="button button_arrow">
                <span>Envoyer</span>
            </button>
        </div>
    </div>
    <!--form endss-->
</div>